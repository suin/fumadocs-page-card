{
  "extends": ["@tsconfig/node22", "@tsconfig/strictest"],
  "compilerOptions": {
    "composite": true,
    "outDir": "./js",
    "rootDir": "./ts",
    "inlineSourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noEmitOnError": true,
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "isolatedModules": true,
    "jsx": "react-jsx"
  },
  "include": ["ts/**/*.ts", "ts/**/*.tsx"],
  "exclude": ["ts/**/*.test.*", "ts/**/*.spec.*", "ts/**/__tests__/*"]
}
